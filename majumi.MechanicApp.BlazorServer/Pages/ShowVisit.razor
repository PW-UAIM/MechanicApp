@inject IModel model
@inject IController controller
@inject DialogService DialogService

<RadzenTemplateForm TItem="VisitData" Data="@model.SelectedVisit" class="text-white">
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="VisitID" />
        </div>
        <div class="col">
            <RadzenNumeric ShowUpDown="false" Disabled @bind-Value="@model.SelectedVisit.VisitID" Name="VisitID" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="ClientID" />
        </div>
        <div class="col">
            <RadzenNumeric ShowUpDown="false" Disabled @bind-Value="@model.SelectedVisit.ClientID" Name="ClientID" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
        <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="MechanicID" />
        </div>
        <div class="col">
            <RadzenNumeric ShowUpDown="false" Disabled @bind-Value="@model.SelectedVisit.MechanicID" Name="MechanicID" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="CarID" />
        </div>
        <div class="col">
            <RadzenNumeric ShowUpDown="false" Disabled @bind-Value="@model.SelectedVisit.CarID" Name="CarID" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="ServiceType" />
        </div>
        <div class="col">
            <RadzenTextBox Disabled @bind-Value="@model.SelectedVisit.ServiceType" Name="ServiceType" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="ServiceDate" />
        </div>
        <div class="col">
            <RadzenDatePicker Disabled @bind-Value="@model.SelectedVisit.ServiceDate" Name="ServiceDate" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="ServiceCost" />
        </div>
        <div class="col">
            <RadzenNumeric  ShowUpDown="false"Disabled @bind-Value="@model.SelectedVisit.ServiceCost" Name="ServiceCost" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="ServiceStatus" />
        </div>
        <div class="col">
            <RadzenTextBox Disabled @bind-Value="@model.SelectedVisit.ServiceStatus" Name="ServiceStatus" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="Notes" />
        </div>
        <div class="col">
            <RadzenTextBox Disabled @bind-Value="@model.SelectedVisit.Notes" Name="Notes" type="text" class="text-white" Style="text-align:center" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col">
            <RadzenButton Click="@Edit" Text="Edytuj" class="form-control  align-items-center nav-link custom-btn custom-border-btn btn"  />
        </div>
    </div>
</RadzenTemplateForm>



@code {
    async Task Edit()
    {
        await DialogService.OpenAsync<EditVisit>("Edytuj wizytę");
    }
}